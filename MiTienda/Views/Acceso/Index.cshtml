
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="~/logo-tienda.png">
    <title>Acceso</title>
    @Styles.Render("~/Content/css")
</head>
<body class="bg-light">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-5">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <h3 class="d-flex justify-content-center mt-4 mb-4">Iniciar Sesión</h3>
                                <div class="card-body">
                                    <form action="@Url.Content("~/Acceso/Index")" method="post">
                                        @Html.AntiForgeryToken()
                                        <div class="form-floating mb-3">
                                            <input class="form-control" id="inputEmail" name="NCorreo" type="email" placeholder="name@example.com" />
                                            <label for="inputEmail">Usuario</label>
                                        </div>
                                        <div class="form-floating mb-3">
                                            <input class="form-control" id="inputPassword" name="NContrasena" type="password" placeholder="Contraseña" />
                                            <label for="inputPassword">Contraseña</label>
                                        </div>
                                        <div class="form-floating mb-3">
                                            @{if (ViewBag.Error != null)
                                            {
                                            <div class="alert alert-danger" role="alert">
                                                @ViewBag.Error
                                            </div>
                                            }
                                            }
                                        </div>
                                        <button class="btn btn-primary col-12 justify-content-center btn-block" type="submit">Ingresar</button>
                                    </form>

                                </div>
                                <div class="d-flex justify-content-center mb-4">
                                    <a id="publicidad_cuenta" class="nav-link" href="@Url.Action("Registrarse","Acceso")">Registrarse</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script>
        
    </script>
</body>
</html>
