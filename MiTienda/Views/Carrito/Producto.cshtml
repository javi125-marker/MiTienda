@model MiTienda.Models.Producto
@{
    ViewBag.Title = "Producto";
    Layout = "~/Views/Shared/Carrito.cshtml";
}

<section class="py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="row gx-4 gx-lg-5 align-items-center">
            <div class="col-md-6"><img class="card-img-top mb-5 mb-md-0" src="data:image/@Html.DisplayTextFor(model => model.extension);base64,@Html.DisplayTextFor(model => model.base64)" alt="..."></div>
            <div class="col-md-6">
                <div class="small mb-1 text-black-50 d-flex justify-content-center text-center">@Html.DisplayTextFor(model => model.oMarca.Descripcion)</div>
                <h1 class="display-5 fw-bolder d-flex justify-content-center text-center">@Html.DisplayTextFor(model => model.Nombre)</h1>
                <p class="lead d-flex justify-content-center text-center">@Html.DisplayTextFor(model => model.Descripcion)</p>
                <div class="fs-5 mb-5 d-flex justify-content-center text-center gap-1">
                    <span class="fw-bold">Precio: </span><span class="ml-5">$ @Html.DisplayTextFor(model => model.Precio)</span>
                </div>
                <div class="d-flex">
                    <a href="@Url.Action("Index", "Carrito")" class="btn btn-secondary w-50 text-center me-3">
                        <i class="fas fa-arrow-left"></i> Atrás
                    </a>
                    @{
                        if (((MiTienda.Models.Usuario)Session["Usuario"]).EsAdministrador == false)
                        {
                            <button class="btn btn-primary btn-agregar-carrito flex-shrink-0 w-50 " type="button" data-idproducto="@Html.DisplayTextFor(model => model.IdProducto)">
                                <i class="fas fa-shopping-cart"></i> Añadir
                            </button>
                        }
                    }
                    
                </div>
            </div>
        </div>
    </div>
</section>

@section scripts{
    

}